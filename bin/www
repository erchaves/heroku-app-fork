#!/usr/bin/env node
require('babel-core/register');

global.__CLIENT__ = false;

var app = require('../src/app').default;
var createServer = require('../src/createServer').default;
var createDevServer = require('../src/createDevServer').default;

var PORT = parseInt(process.env.PORT, 10) || 3000;
var DEV_PORT = parseInt(process.env.DEV_PORT) || PORT + 1;

app.set('port', PORT);

createServer({
  app: app,
  port: PORT
});

if (app.get('env') === 'development') {
  createDevServer({
    port: DEV_PORT,
    proxyPort: PORT
  });
}
